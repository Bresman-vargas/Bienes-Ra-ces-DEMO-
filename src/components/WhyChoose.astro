---
import UserGroupIco from '../components/icons/chooseUsLine/UserGroup.astro';
import BrandTerraformIco from '../components/icons/chooseUsLine/BrandTerraform.astro';
import FilePencilIco from '../components/icons/chooseUsLine/FilePencil.astro';

const carts = [
    {
        title: "Trusted Experts in Real Estate",
        description: "With us, you're not just buying a property - you're making a smart, informed decision.",
        icon: FilePencilIco,
    },
    {
        title: 'Your Vision, Our Commitment',
        description: "We turn your real estate dreams into reality with personalized guidance..",
        icon: BrandTerraformIco,
    },
    {
        title: 'Excellence in Every Transaction',
        description: 'Experience seamless buying, selling, or renting with a team you can trust.',
        icon: UserGroupIco,
    }
];
---

{
    carts.map(cart => {
        return (
            <div class="flex flex-col mx-auto items-center max-w-72 gap-4 p-2">
                <div class="bg-[var(--background-dark-color)] p-2 rounded-xs">
                    <cart.icon class="text-[var(--price-color)]"/>
                </div>
                <h3 class="text-xl font-semibold text-center text-pretty max-w-60">{cart.title}</h3>
                <p class="text-center">{cart.description}</p>
            </div>
        )
    })
}