---
const nameLinks = {
  links: [
    { name: 'About Us', url: '/about' },
    { name: 'Blog' , url : '/blog'},
    { name: 'Properties', url: '/properties' },
    { name: 'Contact', url: '/contact' }
  ]
};
---
{
    nameLinks.links.map((link) => (
        <li class="w-full">
            <a href={link.url} class={`whitespace-nowrap hover:underline block decoration-[var(--price-color)] decoration-2 underline-offset-4 w-full text-end px-4 py-3 transition-colors duration-300 ease-in-out ${Astro.props.class}`}>{link.name}</a>
        </li>
    ))
}