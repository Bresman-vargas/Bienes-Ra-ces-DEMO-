---
import Layout from "../layouts/Layout.astro";
import ContainerSection from "../components/ContainerSection.astro";
import WhyChoose from "../components/WhyChoose.astro";
import Properties from "../components/Properties.astro";
import PostsLine from "../components/PostsLine.astro";
import Testimonials from "../components/Testimonials.astro";
import ButtonLink from "../components/ButtonLink.astro";
---

<Layout
  title="Why Choose Us"
  description="Learn why we are the best choice for your needs."
>
  <section
    class="h-screen bg-cover bg-center bg-no-repeat relative"
    style="background-image: url(/src/components/img/header.webp)"
  >
    <div
      class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-black to-transparent"
    >
    </div>
    <ContainerSection
      class="text-white flex flex-col gap-4 justify-center h-screen"
    >
      <span class="text-amber-600 font-bold"
        >Discover a wide range of properties</span
      >
      <h1 class="text-7xl max-md:text-4xl font-extrabold uppercase">
        Your Investment, <br /> Our Priority
      </h1>
      <p class="font-light max-w-80">
        With us, you're not just buying a property - you're making a smart,
        informed decision.
      </p>
      <ButtonLink
        class="bg-amber-600 dark:bg-amber-600 dark:border-amber-600 dark:text-white border-amber-600 text-white z-20"
        text="Contact"
      />
    </ContainerSection>
  </section>

  <main>
    <section class="bg-[var(--secondary-color)] text-[var(--text-color)] py-9">
      <h2 class="flex justify-center text-2xl pb-6 font-bold">Why Choose Us</h2>
      <ContainerSection class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <WhyChoose />
      </ContainerSection>
    </section>

    <section
      class="py-9 bg-[var(--background-color)] text-[var(--text-color)]"
    >
      <ContainerSection class="py-9">
        <span class="uppercase">For Sale</span>
        <h2 class="text-3xl font-bold text-balance pb-4">
          Houses and Apartments for Sale
        </h2>

        <div class="grid grid-cols-1">
          <!-- Editar para properties  -->
          <Properties />
        </div>
        <ButtonLink class="ml-auto" href="/" text="View All" />
      </ContainerSection>
    </section>

    <section
      class="text-white bg-center h-60"
      style="background-image: url(/src/components/img/encuentra.webp)"
    >
      <ContainerSection
        class="flex flex-col items-center justify-center h-full"
      >
        <h2 class="text-2xl font-bold mb-2 text-balance text-center">
          Find Your Dream Home Today
        </h2>
        <p class="mb-4 text-center">
          Simplifying your property search with expert guidance and care.
        </p>
        <ButtonLink href="/" text="Contact Us" />
      </ContainerSection>
    </section>

    <article class="py-9 bg-[var(--background-color)] text-[var(--text-color)]">
      <ContainerSection class="py-9">
        <span class="uppercase">Keep Reading</span>
        <h2 class="text-5xl font-bold text-balance pb-4">More Content</h2>

        <div class="grid grid-flow-row lg:grid-flow-col gap-10">
          <div class="flex flex-col items-center">
            <h2 class="text-center text-2xl font-bold mb-4">Recent Posts</h2>
            <div class="flex flex-col gap-y-4">
              <PostsLine />
            </div>
          </div>

          <div>
            <div class="flex flex-col items-center">
              <h2 class="text-center text-2xl font-bold mb-4">
                Reviews of Our Services
              </h2>
              <Testimonials />
            </div>
          </div>
        </div>
      </ContainerSection>
    </article>
  </main>
</Layout>
